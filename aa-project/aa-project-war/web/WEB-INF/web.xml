<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>DandB Concerts</display-name>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>ControllerOrder</servlet-name>
        <servlet-class>controllers.ControllerOrder</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <description>Landing page</description>
        <servlet-name>ControllerLanding</servlet-name>
        <servlet-class>controllers.ControllerLanding</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <description>Members area</description>
        <servlet-name>ControllerMember</servlet-name>
        <servlet-class>controllers.ControllerMember</servlet-class>
        <load-on-startup>3</load-on-startup>
        <security-role-ref>
            <description/>
            <role-name>Members</role-name>
            <role-link>members</role-link>
        </security-role-ref>
    </servlet>
    <servlet>
        <servlet-name>ControllerAccount</servlet-name>
        <servlet-class>controllers.ControllerAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>controllers.ControllerCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerMember</servlet-name>
        <url-pattern>/member</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLanding</servlet-name>
        <url-pattern>/landing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAccount</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerOrder</servlet-name>
        <url-pattern>/order</url-pattern>
        <url-pattern>/order-account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>landing.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>Account</display-name>
        <web-resource-collection>
            <web-resource-name>account</web-resource-name>
            <description/>
            <url-pattern>/account.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>accountshort</web-resource-name>
            <description/>
            <url-pattern>/account</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>members</role-name>
            <role-name>administrators</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Order</display-name>
        <web-resource-collection>
            <web-resource-name>order-with-account</web-resource-name>
            <description>Order with account</description>
            <url-pattern>/order-account</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>members</role-name>
            <role-name>administrators</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>aa-realm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login-error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Members only</description>
        <role-name>members</role-name>
    </security-role>
    <security-role>
        <description>Administrator access to the application
</description>
        <role-name>administrators</role-name>
    </security-role>
</web-app>
