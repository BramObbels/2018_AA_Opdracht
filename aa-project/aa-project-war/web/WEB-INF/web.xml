<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Ticketmaster</display-name>
    <servlet>
        <servlet-name>ControllerOrder</servlet-name>
        <servlet-class>controllers.ControllerOrder</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <description>Landing page</description>
        <servlet-name>ControllerLanding</servlet-name>
        <servlet-class>controllers.ControllerLanding</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <description>Members area</description>
        <servlet-name>ControllerMember</servlet-name>
        <servlet-class>controllers.ControllerMember</servlet-class>
        <load-on-startup>3</load-on-startup>
        <security-role-ref>
            <description/>
            <role-name>Members</role-name>
            <role-link>members</role-link>
        </security-role-ref>
    </servlet>
    <servlet>
        <description>Management area</description>
        <servlet-name>ControllerManagement</servlet-name>
        <servlet-class>controllers.ControllerManagement</servlet-class>
        <load-on-startup>4</load-on-startup>
        <security-role-ref>
            <description/>
            <role-name>Administrators</role-name>
            <role-link>administrators</role-link>
        </security-role-ref>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerOrder</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLanding</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerMember</servlet-name>
        <url-pattern>/member</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerManagement</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login-error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Visible for anyone</description>
        <role-name>public</role-name>
    </security-role>
    <security-role>
        <description>Members only</description>
        <role-name>members</role-name>
    </security-role>
    <security-role>
        <description>Administrator access to the application
</description>
        <role-name>administrators</role-name>
    </security-role>
</web-app>
